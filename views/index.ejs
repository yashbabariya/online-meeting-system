<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@300&family=New+Tegomin&family=Yatra+One&display=swap" rel="stylesheet">
<style>
    /* responsive */
    @media (max-width: 440px) {
        .nav-contcnt {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .new-meeting {
            width: 124px;
            white-space: nowrap;
        }
    }
     
    body{
        height: 100vh;
        width: 100%;
        background-color: #e4e4f1;
        opacity: 1;
        background-image: radial-gradient(circle at center center, #dfcccc, #5a5ae6), repeating-radial-gradient(circle at center center, #501010, #000000, 25px, transparent 50px, transparent 25px);
        background-blend-mode: overlay; 
    }
    
    .logo{
        font-family: 'Lato', sans-serif;
        letter-spacing: 1px;
    }
    .logo:hover {
        color: paleturquoise;
    }

    .mb-3{
        font-family: 'Yatra One', cursive;
    }

    #quotes{
        font-family: 'New Tegomin', serif;
        font-size: 1.2rem;
    }

    .input-group-text{
        border: 0.5px solid rgb(42, 38, 38);
    }

    .form-control, .form-control:active, .form-control:hover , .form-control:focus{
        background-color: #ffffff;
        color: #000;
        border: 1px solid black;
    }

    .icon {
        text-decoration: none;
        color: #fcfdfd;
        padding: 0rem .25rem;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: .25rem;
        margin: 0rem .35rem;
    }

    .icon:hover {
        color: paleturquoise;;
    }

    .icon ion-icon {
        font-size: 1.7rem;
    }

    .btn {
        border: 1px solid black;       
    }

    .btn:focus, .btn:active:focus, .btn.active:focus {
        outline: 0 none;
    }

    .btn-primary {
        background: #1FA2FF;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #A6FFCB, #12D8FA, #1FA2FF);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #A6FFCB, #12D8FA, #1FA2FF); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        color: #2C5364;  /* fallback for old browsers */
        font-family: 'Lato', sans-serif;
        letter-spacing: 1px;
    }

    .btn-primary:hover, .btn-primary:focus, .btn-primary:active, .btn-primary.active, .open > .dropdown-toggle.btn-primary {
        color: #ffff;
        background: #c31432;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to left, #240b36, #c31432);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to left, #240b36, #c31432); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    }

    /* .btn-outline-primary:active, .btn-outline-primary.active {
        background: #ffff;
        border: 1px solid blue;
        box-shadow: none;
    } */

    .btn-outline-primary {
        background: #1FA2FF;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #A6FFCB, #12D8FA, #1FA2FF);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #A6FFCB, #12D8FA, #1FA2FF); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        color: #2C5364;  /* fallback for old browsers */
        font-family: 'Lato', sans-serif;
        letter-spacing: 1px;
    }

    .btn-outline-primary:hover, .btn-outline-primary:focus, .btn-outline-primary:active, .btn-outline-primary.active, .open > .dropdown-toggle.btn-outline-primary {
        color: #ffff;
        background: #c31432;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to left, #240b36, #c31432);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to left, #240b36, #c31432); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    }

</style>

<body> 
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid nav-contcnt">
            <a class="navbar-brand" href="#" style="color: #fcfafa;"> <span class="logo"
                style="font-weight: bold;">Online
                Meeting System</span> </a>
            <div class="d-flex">
                <p class="m-0 px-3" style="font-weight: bold; color: #f6f7f8;">
                    <%= user.name %>
                </p>
                <a class="icon" href="/logout">
                    <ion-icon name="exit-outline"></ion-icon>
                </a>
            </div>
        </div>
    </nav>
    
    <div class="container py-5">
        <div class="row g-3">
            <div class="col-md-6">
                <h1 class="mb-3">
                    Premium video meetings. Now free for everyone.
                </h1>
                <p id="quotes" style="color: #5F6368;">People who enjoy meetings should not be in charge of Anything.</p>
                <div class="a123 my-5" style="display: flex; ">
                    <a class="btn btn-primary new-meeting" style="width: 180px;" href="/new-meeting" role="button">New
                        Meeting</a>
                    <form action="join-room" style="margin-left: 1rem;" method="POST">
                        <div class="input-group ">
                            <span class="input-group-text" id="inputGroup-sizing-default">
                                <ion-icon name="planet-outline"></ion-icon>
                            </span>
                            <input name="room_id" type="text" class="form-control" placeholder="Enter a code or Link"
                                aria-label="Recipient's username" aria-describedby="button-addon2">
                            <button class="btn btn-outline-primary" type="submit" id="button-addon2">Join</button>
                        </div>
                    </form>
                </div>
                <hr>
                <p><a href="#" style="text-decoration: none;">Tearms & Conditions</a> Online Meeting System</p>
            </div>
            <div class="col-md-6">
                <div class="card" style="box-shadow: 0 0 5px #b8b8b8;">
                    <div class="card-body">
                        <img src="/images/ss.png" width="100%" class="rounded" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</body>
