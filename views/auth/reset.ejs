<block-content>
    <form action="/reset" method="POST">
        <legend> Reset Password</legend>
        <div class="form-group">
            <label for="password"> New Password</label>
            <input type="password" class="from-control" name="password" value="" placeholder="New Password"
                autofocus=true>
        </div>
        <div class="form-group">
            <label for="confirm"> Confirm Password</label>
            <input type="password" class="from-control" name="confirm" value="" placeholder="Confirm Password">
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit"> Update Password</button>
        </div>
    </form>
</block-content>
